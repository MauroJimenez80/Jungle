@using Jungle_Models.Models
@model IEnumerable<Country>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Zombie List</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-action="Upsert"  class="btn btn-success">
        <i class="fas fa-plus"></i> &nbsp; Create New Zombie
      </a>
    </div>
  </div>

  <br />
  
    @if (Model.Count() > 0)
    {
      <table class="table table-bordered table-striped" style="width:100%">
        <thead class="thead-dark">
          <tr class="table-info">
            <th>Name</th>
            <th>Destinations</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          @foreach (var obj in Model)
          {
            <tr>
              <td width="50%">@obj.Name</td>
              <td>
                @foreach (var obj2 in @obj.Destinations)
                {
                      <ul>
                          <li>@obj2.Name</li>
                      </ul> 
                }
              </td>
              <td class="text-center">
                <div class="w-75 btn-group" role="group">
                  <a asp-route-Id="" asp-action="" class="btn btn-primary mx-2">Update
                    <i class="fas fa-edit"></i>
                  </a>
                  <a asp-route-Id="" asp-action="" class="btn btn-danger mx-2">Delete
                    <i class="fas fa-trash-alt"></i>
                  </a>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    }
    else
    {
      <p>No Country exists.</p>
    }
  </div>
